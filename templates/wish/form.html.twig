{% extends 'base.html.twig' %}

{% block title %}
    Ajouter | {{ parent() }}
{% endblock %}

{% block body %}
    {{ form_start(formWish)}}
    <h2 class="text-center">Creation d'idée !</h2>
    {{form_row(formWish.title,{"label":"Titre"})}}
    <p>Entre 2 et 250 caractères et certains caratères ne sont pas autorisés</p>
    {{form_row(formWish.description,{"label":"Description"})}}
    <p>Minimun de  2 caractères</p>
    {{ form_row(formWish.author,{"label":"Auteur","value":app.user.pseudo}) }}
    <p>Entre 2 et 50 caractères et certains caratères ne sont pas autorisés</p>
    {{ form_row(formWish.category,{"label":"Catégories"}) }}
    <button>Ajouter</button>
    {{ form_end(formWish)}}

<script>
    const removeHtmlPattern = ()=>{
        document.querySelectorAll('input').forEach((input)=>{
            input.removeAttribute('pattern')
        })
    }
removeHtmlPattern()
</script>
{% endblock %}

