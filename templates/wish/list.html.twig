{% extends 'base.html.twig' %}
{% block title %} {{ title }} {% endblock %}
{% block body %}
    <hr>
    {% for wish in wishs%}
        <a href="{{path('wish_detail',{ 'id': wish.id}) }}" >
            <h2>{{wish.title |capitalize}} </h2>
            <h3>[Categorie : {{wish.category.name}}]</h3>
            <p>{{wish.author |capitalize}} a Publi√© le : {{
                wish.dateCreated
                | format_datetime('full', 'full', locale='fr')
                | split(' ')[0]}}
                {{wish.dateCreated
                | format_datetime('full', 'full', locale='fr')
                | split(' ')[1]}}
                {{wish.dateCreated
                | format_datetime('full', 'full', locale='fr')
                | split(' ')[2]}}</p>
        </a>
        <hr>
    {%endfor%}
{% endblock %}

